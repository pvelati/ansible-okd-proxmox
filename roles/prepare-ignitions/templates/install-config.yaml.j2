apiVersion: v1
baseDomain: {{ okd_base_domain }}
metadata:
  name: {{ okd_cluster_name }}
compute:
- hyperthreading: Disabled
  name: worker
  replicas: 0
controlPlane:
  hyperthreading: Disabled
  name: master
  replicas: 3
networking:
  clusterNetwork:
  - cidr: 10.128.0.0/14
    hostPrefix: 23
  networkType: OpenShiftSDN
  serviceNetwork:
  - 172.30.0.0/16
platform:
  none: {}
fips: false
pullSecret: '{{ okd_pull_secret }}'
sshKey: "{{ okd_ssh_key }}"
